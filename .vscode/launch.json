{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "launch as server",
            "type": "node",
            "program": "./out/webkit/webKitDebug.js",
			"runtimeArgs": ["--harmony"],
            "stopOnEntry": false,
            "args": [ "--server=4712" ],
            "sourceMaps": true,
            "outDir": "out"
        },
        {
            "name": "launch in extension host",
            "type": "extensionHost",
            "request": "launch",
            // Path to VSCode executable"
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "stopOnEntry": false,
			"sourceMaps": true,
            "outDir": "out"
        },
        {
            "name": "test",
            "type": "node",
            "program": "./node_modules/gulp/bin/gulp.js",
            "stopOnEntry": false,
            "args": [ "test" ],
            "sourceMaps": true,
            "outDir": "out"
        }
    ]
}
